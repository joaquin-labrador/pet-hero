// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Keeper {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  phone     String
  fee       Int
  stay      Stay?
  Reservation Reservation[]
  Chat        Chat[]
}

model Owner {
  id       Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email    String @unique
  password String
  phone    String
  Pets     Pet[]
  Chat     Chat[]
}

model Pet {
  id          Int      @id @default(autoincrement())
  name        String
  species     String
  breed       String
  sex         String
  age         String
  image       String
  vaccines    String
  //relations
  Owner       Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId     Int
  Reservations Reservation[]
  active      Boolean  @default(true)
}

model Review {
  id       Int      @id @default(autoincrement())
  comment  String
  rating   Int
  date     DateTime @default(now())
  //relations
  Reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  reservationId Int @unique
}

model Stay {
  id    Int      @id @unique
  since DateTime
  until DateTime
  Keeper Keeper @relation(fields: [id], references: [id], onDelete: Cascade)
}


model Reservation {
  id       Int      @id @default(autoincrement())
  since    DateTime
  until    DateTime
  state    String
  price    Float
  payment  String
  createdAt DateTime @default(now()) 
  //relations
  Pet      Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  petId    Int
  Keeper   Keeper   @relation(fields: [keeperId], references: [id], onDelete: Cascade)
  keeperId Int
  Review   Review?
  Chat    Chat?
}

model Chat {
 reservationId Int @id @unique
 keeperId Int
 ownerId Int
 Reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
 Keeper Keeper @relation(fields: [keeperId], references: [id], onDelete: Cascade)
 Owner Owner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
 Message Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  text      String   @db.VarChar(2000)
  createdAt DateTime @default(now())
  messageStateId Int @default(1)
  sender    String
  //relations
  Chat      Chat     @relation(fields: [chatId], references: [reservationId], onDelete: Cascade)
  chatId    Int
  MessageState MessageState @relation(fields: [messageStateId], references: [id], onDelete: Cascade)
}

model MessageState {
  id        Int      @id @default(autoincrement())
  state     String   @default("PENDING")
  //relations one to one
  Message   Message[]
}